    private void OpenEditForm(RegistrationRecord record)
    {
        isAddingNew = false;

        // Clone to avoid editing table row directly
        editingRecord = new RegistrationRecord
        {
            MemberName = record.MemberName,
            ChurchLocation = record.ChurchLocation,
            PhoneNumber = record.PhoneNumber,
            RegistrationStatus = record.RegistrationStatus,
            MealsPaid = record.MealsPaid,
            IsNewCYF = record.IsNewCYF,
            GroupAssignment = record.GroupAssignment
        };

        isEditFormVisible = true;
    }

    private void CloseEditForm()
    {
        isEditFormVisible = false;
        isAddingNew = false;
        editingRecord = new RegistrationRecord();
    }

    private void SaveRegistration()
    {
        if (string.IsNullOrWhiteSpace(editingRecord.MemberName) ||
            string.IsNullOrWhiteSpace(editingRecord.ChurchLocation))
        {
            return;
        }

        if (isAddingNew)
        {
            registrationRecords.Add(editingRecord);
        }
        else
        {
            var existing = registrationRecords.FirstOrDefault(r =>
                r.MemberName == editingRecord.MemberName &&
                r.PhoneNumber == editingRecord.PhoneNumber);

            if (existing != null)
            {
                existing.ChurchLocation = editingRecord.ChurchLocation;
                existing.RegistrationStatus = editingRecord.RegistrationStatus;
                existing.MealsPaid = editingRecord.MealsPaid;
                existing.IsNewCYF = editingRecord.IsNewCYF;
                existing.GroupAssignment = editingRecord.GroupAssignment;
            }
        }


        ApplyFilters();
        CloseEditForm();
    }

    private string GenerateQRCode(string memberName, string churchLocation)
    {
        // Format data for QR code
        string qrData = Uri.EscapeDataString($"Name: {memberName}\nChurch: {churchLocation}");
        
        // Using QR Server API (free service)
        string qrUrl = $"https://api.qrserver.com/v1/create-qr-code/?size=200x200&data={qrData}";
        
        return qrUrl;
    }

    private void ApplyFilters()
    {
        filteredRegistrations = registrationRecords.Where(r =>
            (string.IsNullOrEmpty(searchMember) ||
             r.MemberName.Contains(searchMember, StringComparison.OrdinalIgnoreCase)) &&
            (string.IsNullOrEmpty(selectedRegistrationStatus) || r.RegistrationStatus == selectedRegistrationStatus) &&
            (string.IsNullOrEmpty(selectedMealStatus) ||
             (selectedMealStatus == "PAID" && r.MealsPaid) ||
             (selectedMealStatus == "UNPAID" && !r.MealsPaid)) &&
            (string.IsNullOrEmpty(selectedNewCYF) ||
             (selectedNewCYF == "YES" && r.IsNewCYF) ||
             (selectedNewCYF == "NO" && !r.IsNewCYF)) &&
            (string.IsNullOrEmpty(selectedGroup) || (r.GroupAssignment ?? "") == selectedGroup)
        ).ToList();
    }

