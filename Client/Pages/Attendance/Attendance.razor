@page "/registration-tracking"
@inject HttpClient Http
@inject IJSRuntime Js
@using Radzen
<!-- Page Header -->
<div class="page-header mb-4">
    <div>
        <h2 class="page-title">Registration Tracking</h2>
        <p class="page-subtitle">Manage member registrations, payments, and group assignments</p>
    </div>
    <button class="btn-primary" @onclick="OpenAddForm">
        <i class="fas fa-plus"></i> Add Registration
    </button>
</div>

<!-- Registration Stats -->
<div class="stats-container mb-4">
    <div class="row g-3">
        <div class="col-lg-3 col-md-6">
            <div class="stat-card">
                <div class="stat-header">
                    <span class="stat-label">Total Registered</span>
                </div>
                <div class="stat-value">@totalRegistered</div>
                <div class="stat-description">Members registered</div>
                <div class="stat-meta">CYF Event 2025</div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="stat-card">
                <div class="stat-header">
                    <span class="stat-label">Paid Registration</span>
                </div>
                <div class="stat-value">@paidRegistration</div>
                <div class="stat-description">Registration fees paid</div>
                <div class="stat-meta">₱@(paidRegistration * 500)</div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="stat-card">
                <div class="stat-header">
                    <span class="stat-label">Paid Meals</span>
                </div>
                <div class="stat-value">@paidMeals</div>
                <div class="stat-description">Members with meals paid</div>
                <div class="stat-meta">₱@(paidMeals * 250)</div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="stat-card">
                <div class="stat-header">
                    <span class="stat-label">Groups Formed</span>
                </div>
                <div class="stat-value">@groupCount</div>
                <div class="stat-description">Team/group assignments</div>
                <div class="stat-meta">Auto-mixed grouping</div>
            </div>
        </div>
    </div>
</div>

<!-- Registration Filters -->
<div class="filters-section mb-4">
    <div class="row g-3">
        <div class="col-lg-4 col-md-6">
            <div class="filter-group">
                <label class="filter-label">Search Member</label>
                <div class="input-wrapper">
                    <i class="fas fa-search search-icon"></i>
                    <input class="filter-input" placeholder="Search by name..." @bind="@searchMember" @bind:event="oninput" @onkeyup="ApplyFilters"/>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6">
            <div class="filter-group">
                <label class="filter-label">Filter by Registration Status</label>
                <select class="filter-select" @onchange="OnRegistrationStatusChanged">
                    <option value="">All Status</option>
                    <option value="PAID">Paid</option>
                    <option value="PENDING">Pending</option>
                    <option value="NEW">New CYF</option>
                </select>
            </div>
        </div>
        <div class="col-lg-4 col-md-6">
            <div class="filter-group">
                <label class="filter-label">Filter by Meal Status</label>
                <select class="filter-select" @onchange="OnMealStatusChanged">
                    <option value="">All Meal Status</option>
                    <option value="PAID">Meals Paid</option>
                    <option value="UNPAID">Meals Unpaid</option>
                </select>
            </div>
        </div>
        <div class="col-lg-4 col-md-6">
            <div class="filter-group">
                <label class="filter-label">New CYF Members</label>
                <select class="filter-select" @onchange="OnNewCYFFilterChanged">
                    <option value="">All Members</option>
                    <option value="YES">New CYF</option>
                    <option value="NO">Returning</option>
                </select>
            </div>
        </div>
        <div class="col-lg-4 col-md-6">
            <div class="filter-group">
                <label class="filter-label">Filter by Group</label>
                <select class="filter-select" @onchange="OnGroupFilterChanged">
                    <option value="">All Groups</option>
                </select>
            </div>
        </div>
    </div>
</div>

<!-- Registration Table -->
<div class="registration-table-section mb-4">
    <div class="table-header mb-3">
        <h6 class="table-title">Total Registered: <span class="count-badge">@(filteredRegistrations?.Count ?? 0)</span></h6>
        <div class="table-actions">
            <button class="btn-action btn-secondary">
                <i class="fas fa-print"></i> Print List
            </button>
        </div>
    </div>
    <div class="table-container">
        <table class="data-table">
            <thead>
            <tr>
                <th style="width: 50px;"><input type="checkbox" /></th>
                <th style="width: 120px;">QR Code</th>
                <th style="width: 150px;">Member Name</th>
                <th style="width: 120px;">Location/Church</th>
                <th style="width: 100px;">Registration</th>
                <th style="width: 90px;">Meals</th>
                <th style="width: 80px;">CYF</th>
                <th style="width: 120px;">Group Assignment</th>
                <th style="width: 100px;text-align: center">Action</th>
            </tr>
            </thead>
            <tbody>
            @if (filteredRegistrations != null && filteredRegistrations.Count > 0)
            {
                @foreach (var registration in filteredRegistrations.Take(20))
                {
                    <tr>
                        <td>
                            <input type="checkbox"/>
                        </td>
                        <td>
                            <div class="cell-label">QR:</div>
                            <div class="qr-container">
                                <img src="@GenerateQRCode(registration.MemberName, registration.ChurchLocation)"
                                     alt="QR Code"
                                     class="qr-image"
                                     title="@registration.MemberName - @registration.ChurchLocation" />
                            </div>
                        </td>
                        <td>
                            <div class="cell-label">Name:</div>
                            <div class="cell-value">@registration.MemberName.ToUpper()</div>
                        </td>
                        <td>
                            <div class="cell-label">Church:</div>
                            <div class="cell-value">@registration.ChurchLocation</div>
                        </td>
                        <td>
                            <div class="cell-label">Fee:</div>
                            <div class="cell-value status-badge @registration.RegistrationStatus.ToLower()">
                                @registration.RegistrationStatus
                            </div>
                        </td>
                        <td>
                            <div class="cell-label">Meals:</div>
                            <div class="cell-value status-badge @(registration.MealsPaid ? "paid" : "unpaid")">
                                @(registration.MealsPaid ? "PAID" : "UNPAID")
                            </div>
                        </td>
                        <td>
                            <div class="cell-label">Status:</div>
                            <div class="cell-value status-badge @(registration.IsNewCYF ? "new" : "returning")">
                                @(registration.IsNewCYF ? "NEW" : "OLD")
                            </div>
                        </td>
                        <td>
                            <div class="cell-label">Group:</div>
                            <div class="cell-value">@(registration.GroupAssignment ?? "Unassigned")</div>
                        </td>
                        <td class="text-center">
                            <RadzenButton Icon="settings"
                                          Size="ButtonSize.Small"
                                          ButtonStyle="ButtonStyle.Light"
                                          Style="border-radius: 6px;"
                                          Click="@(() => OpenEditForm(registration))" />
                        </td>
                     
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="10" class="text-center py-4">
                        <span style="color: #999;">No registration records found</span>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>

<!-- Edit Form Modal -->
@if (isEditFormVisible)
{
    <div class="modal-overlay" @onclick="CloseEditForm">
        <div class="modal-content" @onclick:stopPropagation="true">
            <div class="modal-header">
                <h5 class="modal-title">@(isAddingNew ? "Add New Registration" : "Edit Registration")</h5>
                <button class="modal-close" @onclick="CloseEditForm">&times;</button>
            </div>
            
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label class="form-label">Member Name *</label>
                        <input type="text" class="form-input" @bind="editingRecord.MemberName" placeholder="Enter member name" />
                    </div>

                    <div class="form-group">
                        <label class="form-label">Church Location *</label>
                        <input type="text" class="form-input" @bind="editingRecord.ChurchLocation" placeholder="Enter church location" />
                    </div>

                    <div class="form-group">
                        <label class="form-label">Phone Number *</label>
                        <input type="tel" class="form-input" @bind="editingRecord.PhoneNumber" placeholder="Enter phone number" />
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label class="form-label">Registration Status *</label>
                            <select class="form-input" @bind="editingRecord.RegistrationStatus">
                                <option value="PAID">Paid</option>
                                <option value="PENDING">Pending</option>
                                <option value="NEW">New CYF</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label class="form-label">Is New CYF Member</label>
                            <div class="checkbox-group">
                                <input type="checkbox" id="isNewCYF" @bind="editingRecord.IsNewCYF" />
                                <label for="isNewCYF">Yes, this is a new CYF member</label>
                            </div>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label class="form-label">Meals Status</label>
                            <div class="checkbox-group">
                                <input type="checkbox" id="mealsPaid" @bind="editingRecord.MealsPaid" />
                                <label for="mealsPaid">Meals Paid</label>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="form-label">Group Assignment</label>
                            <input type="text" class="form-input" @bind="editingRecord.GroupAssignment" placeholder="e.g., Team Red" />
                        </div>
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <button class="btn-secondary" @onclick="CloseEditForm">Cancel</button>
                <button class="btn-primary" @onclick="SaveRegistration">Save Registration</button>
            </div>
        </div>
    </div>
}

