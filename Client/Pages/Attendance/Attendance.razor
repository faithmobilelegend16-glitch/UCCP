    private List<GroupSummary> GetGroupSummary()
    {
        return registrationRecords
            .Where(r => !string.IsNullOrEmpty(r.GroupAssignment))
            .GroupBy(r => r.GroupAssignment)
            .Select(g => new GroupSummary
            {
                GroupName = g.Key,
                MemberCount = g.Count(),
                TotalScore = 0
            })
            .ToList();
    }

