@page "/dashboard"
@inject HttpClient Http
@inject IJSRuntime Js
@using Radzen


<!-- Stats Cards -->
<div class="stats-container mb-4">
    <div class="row g-3">
        <div class="col-lg-3 col-md-6">
            <div class="stat-card">
                <div class="stat-header">
                    <span class="stat-label">Total Members</span>
                    <span class="stat-trend up">↑ +12.5%</span>
                </div>
                <div class="stat-value">@(members?.Count ?? 0)</div>
                <div class="stat-description">Active church members</div>
                <div class="stat-meta">All age groups</div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6">
            <div class="stat-card">
                <div class="stat-header">
                    <span class="stat-label">Total Attendees</span>
                    <span class="stat-trend up">↑ +8.3%</span>
                </div>
                <div class="stat-value">@(members?.Count(m => !string.IsNullOrEmpty(m.LastAttendance)) ?? 0)</div>
                <div class="stat-description">Members with recent attendance</div>
                <div class="stat-meta">Last 30 days</div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6">
            <div class="stat-card">
                <div class="stat-header">
                    <span class="stat-label">Total Volunteers</span>
                    <span class="stat-trend up">✓ +15.2%</span>
                </div>
                <div class="stat-value">@(members?.Count(m => !string.IsNullOrEmpty(m.MinistryAssignment)) ?? 0)</div>
                <div class="stat-description">Volunteers serving</div>
                <div class="stat-meta">Assigned to ministries</div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6">
            <div class="stat-card">
                <div class="stat-header">
                    <span class="stat-label">Giving Rate</span>
                    <span class="stat-trend up">↑ @givingPercentage%</span>
                </div>
                <div class="stat-value">@givingPercentage%</div>
                <div class="stat-description">Active givers</div>
                <div class="stat-meta">Tithes and offerings</div>
            </div>
        </div>
    </div>
</div>



    <!-- Attendance Chart Card -->
    <div class="visitor-card mb-4">
        <div class="visitor-header">
            <div>
                <h6 class="visitor-title">Member Attendance by Month</h6>
                <p class="visitor-subtitle">@GetAttendanceSubtitle()</p>
            </div>
        </div>
        <div class="visitor-chart">
            <RadzenChart>
                <RadzenColumnSeries Data="@GetAttendanceData()" CategoryProperty="Month" Title="Attendees" ValueProperty="Count">
                    <RadzenSeriesDataLabels Visible="false" />
                </RadzenColumnSeries>

                @if (radzenAvailable)
                {
                <RadzenChartTooltip />
                }

                <RadzenColumnOptions Radius="5" />
                <RadzenValueAxis>
                    <RadzenGridLines Visible="true" />
                    <RadzenAxisTitle Text="Number of Attendees" />
                </RadzenValueAxis>
                <RadzenCategoryAxis>
                    <RadzenAxisTitle Text="Month" />
                </RadzenCategoryAxis>
            </RadzenChart>
        </div>
    </div>

    <!-- Filters Card -->
    <div class="filters-section mb-4">
        <div class="row g-3">
            <!-- Search Input -->
            <div class="col-lg-3 col-md-6">
                <div class="filter-group">
                    <label class="filter-label">Search Members</label>
                    <div class="input-wrapper">
                        <i class="fas fa-search search-icon"></i>
                        <input class="filter-input" placeholder="Search by name or email..."
                               @bind="@search" @bind:event="oninput"/>
                    </div>
                </div>
            </div>

            <!-- Ministry Filter -->
            <div class="col-lg-3 col-md-6">
                <div class="filter-group">
                    <label class="filter-label">Ministry</label>
                    <select class="filter-select" @onchange="OnMinistryChanged">
                        <option value="">All Ministries</option>
                        <option value="Worship">Worship</option>
                        <option value="Youth">Youth</option>
                        <option value="Outreach">Outreach</option>
                        <option value="Teaching">Teaching</option>
                    </select>
                </div>
            </div>

            <!-- Status Filter -->
            <div class="col-lg-3 col-md-6">
                <div class="filter-group">
                    <label class="filter-label">Member Status</label>
                    <select class="filter-select" @onchange="OnStatusChanged">
                        <option value="">All Status</option>
                        <option value="ACTIVE">Active</option>
                        <option value="INACTIVE">Inactive</option>
                        <option value="VISITOR">Visitor</option>
                    </select>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="filter-group">
              
                    <!-- Register Member Button -->
                    <div class="register-button-container mb-4">
                        <button class="btn-register-full" @onclick="OpenRegisterModal">
                            <i class="fas fa-plus"></i> Register New Member
                        </button>
                    </div>
                </div>
            </div>

           
        </div>
    </div>



<!-- Register Modal -->
@if (showRegisterModal)
{
<div class="modal-overlay" @onclick="CloseRegisterModal">
    <div class="modal-content" @onclick:stopPropagation="true">
        <div class="modal-header">
            <h5 class="modal-title">Register New Church Member</h5>
            <button class="btn-close" @onclick="CloseRegisterModal">&times;</button>
        </div>

        <div class="modal-body">
            <form @onsubmit="HandleRegisterSubmit">
                <div class="form-row">
                    <div class="form-group">
                        <label class="form-label">First Name *</label>
                        <input type="text" class="form-input" placeholder="Enter first name" @bind="newMember.FirstName" required />
                    </div>
                    <div class="form-group">
                        <label class="form-label">Last Name *</label>
                        <input type="text" class="form-input" placeholder="Enter last name" @bind="newMember.LastName" required />
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label class="form-label">Email *</label>
                        <input type="email" class="form-input" placeholder="Enter email address" @bind="newMember.Email" required />
                    </div>
                    <div class="form-group">
                        <label class="form-label">Phone Number *</label>
                        <input type="tel" class="form-input" placeholder="Enter phone number" @bind="newMember.PhoneNumber" required />
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label class="form-label">Join Date *</label>
                        <input type="date" class="form-input" @bind="newMember.JoinDate" required />
                    </div>
                    <div class="form-group">
                        <label class="form-label">Member Status *</label>
                        <select class="form-input" @bind="newMember.Status" required>
                            <option value="">Select Status</option>
                            <option value="ACTIVE">Active</option>
                            <option value="INACTIVE">Inactive</option>
                            <option value="VISITOR">Visitor</option>
                        </select>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label class="form-label">Ministry Assignment</label>
                        <select class="form-input" @bind="newMember.MinistryAssignment">
                            <option value="">Select Ministry (Optional)</option>
                            <option value="Worship">Worship</option>
                            <option value="Youth">Youth</option>
                            <option value="Outreach">Outreach</option>
                            <option value="Teaching">Teaching</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Last Attendance</label>
                        <input type="text" class="form-input" placeholder="e.g., Dec 24, 2025" @bind="newMember.LastAttendance" />
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(registerMessage))
                {
                <div class="alert alert-@(registerSuccess ? "success" : "error")">
                    @registerMessage
                </div>
                }

                <div class="modal-footer">
                    <button type="button" class="btn-cancel" @onclick="CloseRegisterModal">Cancel</button>
                    <button type="submit" class="btn-submit">Register Member</button>
                </div>
            </form>
        </div>
    </div>
</div>
}


    <!-- Table Header with Count -->
    <div class="table-header mb-3">
        <h6 class="table-title">Church Members: <span class="count-badge">@(filteredMembers?.Count ?? 0)</span></h6>
    </div>

    <!-- Data Table -->
    <div class="table-container">
        <table class="data-table">
            <thead>
            <tr>
                <th style="width: 160px;">Member Name</th>
                <th style="width: 130px;">Contact Number</th>
                <th style="width: 160px;">Email</th>
                <th style="width: 130px;">Join Date</th>
                <th style="width: 120px;">Ministry</th>
                <th style="width: 150px;">Last Attendance</th>
                <th style="width: 100px;">Status</th>
            </tr>
            </thead>
            <tbody>
            @if (filteredMembers != null && filteredMembers.Count > 0)
            {
            @foreach (var member in filteredMembers.Take(10))
            {
            <tr>
                <td>
                    <div class="cell-label">Member:</div>
                    <div class="cell-value">
                        @($"{member.FirstName} {member.LastName}"
                        .Trim()
                        .ToUpper())
                    </div>
                </td>
                <td>
                    <div class="cell-label">Contact:</div>
                    <div class="cell-value">@member.PhoneNumber</div>
                </td>
                <td>
                    <div class="cell-label">Email:</div>
                    <div class="cell-value">@member.Email</div>
                </td>
                <td>
                    <div class="cell-label">Joined:</div>
                    <div class="cell-value">@member.JoinDate?.ToString("MMM dd, yyyy")</div>
                </td>
                <td>
                    <div class="cell-label">Ministry:</div>
                    <div class="cell-value" style="@(string.IsNullOrEmpty(member.MinistryAssignment) ? "color: #9ca3af;" : "")">@(string.IsNullOrEmpty(member.MinistryAssignment) ? "No Assignment" : member.MinistryAssignment)</div>
                </td>
                <td>
                    <div class="cell-label">Last Attendance:</div>
                    <div class="cell-value" style="@(string.IsNullOrEmpty(member.LastAttendance) ? "color: #ef4444; font-weight: bold;" : "")">@(string.IsNullOrEmpty(member.LastAttendance) ? "Not Recorded" : member.LastAttendance)</div>
                </td>
                <td>
                    <div class="cell-label">Status:</div>
                    <div class="cell-value status-badge @GetStatusClass(member.Status)" style="@(string.IsNullOrEmpty(member.Status) ? "color: #6b7280; font-weight: bold;" : "")">@(string.IsNullOrEmpty(member.Status) ? "Unknown" : member.Status)</div>
                </td>
            </tr>
            }
            }
            else
            {
            <tr>
                <td colspan="7" class="text-center py-4">
                    <span style="color: #999;">No members found</span>
                </td>
            </tr>
            }
            </tbody>
        </table>
    </div>

    <!-- Pagination Info -->
    <div class="pagination-info">
        <span>0 of @(filteredMembers?.Count ?? 0) member(s) selected.</span>
    </div>

